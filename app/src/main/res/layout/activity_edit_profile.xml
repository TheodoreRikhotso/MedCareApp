<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:background="@drawable/grdnt"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />
        <EditText
            android:id="@+id/etNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ibEdProfileImage"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="98dp"
            android:hint="Name and surname"
            android:textColor="#70009a9a"
            android:textSize="24sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ibEdProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"

            android:layout_marginTop="-60dp"

            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_icon_" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#80009a9a"
            android:elevation="4dp"
            android:paddingBottom="24dp">








            <EditText
                android:id="@+id/etID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"

                android:layout_marginTop="12dp"
                android:hint="ID No"
                android:textColor="#fff"
                android:textSize="19dp" />
            <EditText
                android:id="@+id/etIllness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_below="@+id/etID"
                android:layout_marginTop="8dp"
                android:hint="Illness"
                android:textColor="#fff"
                android:textSize="18sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etKinNameContact"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#70009a9a"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:hint="full Name and Contact No" />

            <EditText
                android:id="@+id/etContact"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:inputType="number"
                android:background="#70009a9a"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:hint="019 0044 009" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#70009a9a"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:hint="email"
                android:textColorLink="#fff" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#70009a9a"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="40dp"
                android:hint="Address" />

            <Button
                android:id="@+id/btnSubmitProfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Submit" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

